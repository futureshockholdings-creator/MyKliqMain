{
  "expo": {
    "name": "MyKliq",
    "slug": "mykliq-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "mykliq",
    "privacy": "public",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.mykliq.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "MyKliq needs camera access to take photos and videos for posts and stories.",
        "NSPhotoLibraryUsageDescription": "MyKliq needs photo library access to select photos and videos for posts and stories.",
        "NSPhotoLibraryAddUsageDescription": "MyKliq needs permission to save photos and videos to your library.",
        "NSMicrophoneUsageDescription": "MyKliq needs microphone access for video recording and voice messages.",
        "NSLocationWhenInUseUsageDescription": "MyKliq needs your location to show nearby meetups and check-in at locations.",
        "UIBackgroundModes": ["remote-notification"]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.mykliq.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow MyKliq to access your camera to take photos and videos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow MyKliq to access your photos to share with your kliq."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#00FF00"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow MyKliq to use your location for nearby meetups and check-ins."
        }
      ]
    ],
    "extra": {
      "apiUrl": "https://api.mykliq.com",
      "eas": {
        "projectId": "REPLACE_WITH_YOUR_EAS_PROJECT_ID"
      }
    },
    "owner": "REPLACE_WITH_YOUR_EXPO_USERNAME",
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/REPLACE_WITH_YOUR_EAS_PROJECT_ID"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
